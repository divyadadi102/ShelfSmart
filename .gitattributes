# ------------- General text files -------------
* text=auto

# Force LF for frontend and backend source code
*.js    text eol=lf
*.jsx   text eol=lf
*.ts    text eol=lf
*.tsx   text eol=lf
*.css   text eol=lf
*.scss  text eol=lf
*.html  text eol=lf
*.json  text eol=lf
*.yml   text eol=lf
*.yaml  text eol=lf
*.md    text eol=lf
*.txt   text eol=lf
*.py    text eol=lf
*.sh    text eol=lf

# Keep CRLF for Windows-specific scripts
*.bat   text eol=crlf
*.cmd   text eol=crlf
*.ps1   text eol=crlf

# ------------- Project configuration -------------
*.env   text eol=lf
*.ini   text eol=lf

# ------------- Git and CI/CD files -------------
.gitattributes text eol=lf
.gitignore     text eol=lf
*.yml          text eol=lf
*.yaml         text eol=lf

# ------------- Binary files (no line-ending conversion) -------------
*.png   binary
*.jpg   binary
*.jpeg  binary
*.gif   binary
*.ico   binary
*.pdf   binary
*.woff  binary
*.woff2 binary
*.ttf   binary
*.eot   binary
*.mp4   binary
*.mp3   binary
